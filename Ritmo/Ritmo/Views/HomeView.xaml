<UserControl x:Class="Ritmo.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ritmo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:viewmodels="clr-namespace:Ritmo.ViewModels"
             d:DataContext="{d:DesignInstance viewmodels:HomeViewModel, IsDesignTimeCreatable=True}">
    <Grid Background="LightGreen">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding TestString}"></TextBlock>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="357,120,0,0" Command="{Binding ChangeTestStringCommand}"/>
        <Button Content="Add to playlist" HorizontalAlignment="Left" Margin="303,270,0,0" VerticalAlignment="Top" Width="129" RenderTransformOrigin="0.372,-0.95" Click="AddToPlayListClick"/>
        <Label Content="song1" HorizontalAlignment="Left" Margin="168,270,0,0" VerticalAlignment="Top" Width="141"/>
        <Label Content="song1" HorizontalAlignment="Left" Margin="168,311,0,0" VerticalAlignment="Top" Width="141"/>
        <Button Content="Add to Playlist" Click="AddToPlayListClick" HorizontalAlignment="Left" Margin="303,317,0,0" VerticalAlignment="Top" Width="129"/>
        <Button Content="Add to Queue" Click="AddToQueueClick" HorizontalAlignment="Left" Margin="464,270,0,0" VerticalAlignment="Top" Width="130"/>
        <Button Content="Add to Queue" Click="AddToQueueClick" HorizontalAlignment="Left" Margin="464,317,0,0" VerticalAlignment="Top" Width="130"/>
        <ListBox Name="Listbox" HorizontalAlignment="Left" Height="100" Margin="140,165,0,0" VerticalAlignment="Top" Width="100" SelectionChanged="ListBox_SelectionChanged"/>

    </Grid>
    
</UserControl>
