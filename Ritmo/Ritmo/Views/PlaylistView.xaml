<UserControl x:Class="Ritmo.Views.PlaylistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ritmo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="GhostWhite">
        <Grid Background="LightSlateGray" Height="97" VerticalAlignment="Top">
            <Label HorizontalAlignment="Left" Width="172" Content="Playlist name" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="24" Height="44" VerticalAlignment="Top"/>
            <Label Margin="0,44,0,0" Content="Duration" Height="25" VerticalAlignment="Top" Width="85" HorizontalAlignment="Left" />
            <Label Margin="0,70,0,0" Content="Creation date:" Height="25" VerticalAlignment="Top" Width="85" HorizontalAlignment="Left"/>
        </Grid>
        <Grid Background="GhostWhite" Margin="0,97,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="325*"/>
                <ColumnDefinition Width="185*"/>
                <ColumnDefinition Width="185*"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="2"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Content="SONG NAME" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Width="327" />
            <Label Grid.Column="1" Content="ARTIST" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="186" />
            <Label Grid.Column="2" Content="ALBUM" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="186" />
            <Label Grid.Column="3" Content="DURATION" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="101" />
            <Border BorderBrush="Black" BorderThickness="1" Height="2" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="4" MinWidth="500"/>
        </Grid>
    </Grid>

</UserControl>
