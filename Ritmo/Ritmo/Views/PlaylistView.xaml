<UserControl x:Class="Ritmo.Views.PlaylistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ritmo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="GhostWhite">
        <Grid Background="LightSlateGray" Height="97" VerticalAlignment="Top">
            <Label Name="NamePlaylist" HorizontalAlignment="Left" Width="172" Content="Playlist name" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="24" Height="44" VerticalAlignment="Top"/>
            <Label Margin="0,44,0,0" Content="Duration" Height="25" VerticalAlignment="Top" Width="85" HorizontalAlignment="Left" />
            <Label Margin="0,70,0,0" Content="Creation date:" Height="25" VerticalAlignment="Top" Width="85" HorizontalAlignment="Left"/>
            <ComboBox HorizontalAlignment="Left" Height="33" Margin="600,54,0,0" VerticalAlignment="Top" Width="145">
                <ComboBox.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                </ComboBox.Background>
                <Button Content="Name A-Z" Height="25" Width="135" Background="{x:Null}" BorderBrush="{x:Null}"/>
                <Button Content="Name Z-A" Height="25" Width="135" Background="{x:Null}" BorderBrush="{x:Null}"/>
                <Button Content="Artist A-Z" Height="25" Width="135" Background="{x:Null}" BorderBrush="{x:Null}"/>
                <Button Content="Artist Z-A" Height="25" Width="135" Background="{x:Null}" BorderBrush="{x:Null}"/>
            </ComboBox>
            <Button Click="ButtonMenu_Click" Name="ButtonMenu" Content="≡" HorizontalAlignment="Left" Margin="760,49,0,0" Width="30" Background="{x:Null}" FontSize="30" Height="46" VerticalAlignment="Top"/>
        </Grid>

        <Button Click="PlaylistMenuButton_Click" Name="PlaylistMenuButton" Content="≡" HorizontalAlignment="Left" Height="44" Margin="177,0,0,0" VerticalAlignment="Top" Width="53" Background="{x:Null}" FontSize="24"/>
        <Grid Background="GhostWhite" Margin="0,97,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="325*"/>
                <ColumnDefinition Width="185*"/>
                <ColumnDefinition Width="185*"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="2"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Content="SONG NAME" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Width="327" />
            <Label Grid.Column="1" Content="ARTIST" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="186" />
            <Label Grid.Column="2" Content="ALBUM" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="186" />
            <Label Grid.Column="3" Content="DURATION" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Width="101" />

            <StackPanel Name="NameColumn" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"></StackPanel>
            <StackPanel Name="ArtistColumn" Grid.Row="2" Grid.Column="1"></StackPanel>
            <StackPanel Name="AlbumColumn" Grid.Row="2" Grid.Column="2"></StackPanel>
            <StackPanel Name="DurationColumn" Grid.Row="2" Grid.Column="3"></StackPanel>
            
            <Border BorderBrush="Black" BorderThickness="1" Height="2" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="4" MinWidth="500"/>
        </Grid>

        <StackPanel Name="MenuPanel" HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="160" Margin="630,97,0,0" Background="#FF778899">
            <Button Name="AddTrackPlaylist" Click="AddTrackPlaylist_Click" Content="Add track to playlist" HorizontalAlignment="Left" Height="30" Margin="0,0,-0.2,0" Width="160" Background="{x:Null}"/>
            <Button Name="AddTrackQueue" Click="AddTrackQueue_Click" Content="Add track to queue" HorizontalAlignment="Left" Height="30" Margin="0,0,-0.2,0" Width="160" Background="{x:Null}"/>
            <Button Name="DeleteTrack" Click="DeleteTrack_Click" Content="Delete track from playlist" HorizontalAlignment="Left" Height="30" Margin="0,0,-0.2,0" Width="160" Background="{x:Null}"/>
        </StackPanel>

        <Grid Name="PlaylistMenuGrid" HorizontalAlignment="Left" Height="0" Margin="104,44,0,-83" VerticalAlignment="Top" Width="126" RenderTransformOrigin="0.474,1.036" Background="#FF778899">
            <Button Name="ChangeName" Click="ChangeNameButton_Click" Content="Change name" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="126" Background="{x:Null}"/>
            <Button Name="DeletePlaylist" Click="DeletePlaylistButton_Click" Content="Delete playlist" HorizontalAlignment="Left" Height="30" Margin="0,30,0,0" VerticalAlignment="Top" Width="126" Background="{x:Null}"/>
        </Grid>
    </Grid>

</UserControl>
